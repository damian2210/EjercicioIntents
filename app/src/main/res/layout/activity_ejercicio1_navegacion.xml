<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ejercicio1Navegacion">
    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#A25FE3"
        android:text="Ejercicio-Actividad Navegador"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="4dp"
        android:text="Indica una URL"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/txtURl"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="4dp"
        android:hint="URL"
        android:text="https://www.fernandowirtz.com"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/btnNaveg"
        android:layout_width="107dp"
        android:layout_height="54dp"
        android:layout_marginStart="85dp"
        android:layout_marginTop="16dp"
        android:text="Navegar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtURl" />

    <Button
        android:id="@+id/btnCerrarNaveg"
        android:layout_width="108dp"
        android:layout_height="55dp"
        android:layout_marginTop="16dp"
        android:text="Cerrar"
        app:layout_constraintStart_toEndOf="@+id/btnNaveg"
        app:layout_constraintTop_toBottomOf="@+id/txtURl" />
</androidx.constraintlayout.widget.ConstraintLayout>